<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardSmartPlugNameText">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardLastUpdateText">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textColor">#dddddd</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="GaugeValueText">
        <item name="android:textColor">#028be7</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="GaugeNameText">
        <item name="android:textColor">#dadada</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ConfigurationSubSectionName">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConfigurationScheduleTimeText">
        <item name="android:textColor">#eeeeee</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ConfigurationScheduleTimeText.Right" parent="ConfigurationScheduleTimeText">
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="ConfigurationScheduleTimeBox">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="HistorySubSectionName">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HistoryDateText">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
