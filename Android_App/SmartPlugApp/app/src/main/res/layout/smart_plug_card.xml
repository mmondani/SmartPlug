<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardElevation="4dp"
                                    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/device_tv"/>

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardSmartPlugNameText"
            android:text="Smart Plug 1"
            android:layout_toRightOf="@id/card_icon"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/card_comm_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ok"
            android:layout_toRightOf="@id/card_icon"
            android:layout_below="@id/card_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/card_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:50:40 - 26/09/2016"
            style="@style/CardLastUpdateText"
            android:layout_toRightOf="@id/card_comm_icon"
            android:layout_below="@id/card_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="23dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/right_arrow"
        android:background="@color/veryLightBlue"
        android:layout_gravity="right"/>
</android.support.v7.widget.CardView>